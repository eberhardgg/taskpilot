// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Task {
  id          String   @id @default(cuid())
  title       String
  description String?
  tier        String   @default("backlog") // "one-thing", "supporting", "if-time", "backlog"
  completed   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  dueDate     DateTime?
  estimatedMinutes Int?
}

model DailyReview {
  id                String   @id @default(cuid())
  date              DateTime @unique
  oneThingId        String?
  oneThingGoal      String?  // Why this task matters - captured during briefing
  oneThingCompleted Boolean  @default(false)
  reflection        String?
  createdAt         DateTime @default(now())
}
